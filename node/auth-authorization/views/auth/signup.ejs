<%- include('../partials/head') %>
</head>
<body>
  <%- include('../partials/nav') %>

  <main class="container mx-auto mt-8 p-8 bg-white rounded-lg shadow-md">
    <h1 class="text-3xl font-bold mb-6 text-center text-gray-800">
      Create Your Account
    </h1>

    <form action="/signup" method="POST" class="max-w-md mx-auto">
        <% if(typeof errors != 'undefined' && errors && errors.length >0) {%>
            <div class="bg-red-500 border border-red-500 text-red-700 px-4 py-3 rounded relative mb-4"role="alert">
                <ul class="list-disc list-inside space-y-1">
                    <% errors.forEach(error =>{ %>
                        <li><% error %></li>
                    <% }) %>
                </ul>
            </div>
         <%}%>
      <!-- First Name -->
      <input
        type="text"
        name="firstName"
        placeholder="First Name"
        required
        class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"
      />

      <!-- Last Name -->
      <input
        type="text"
        name="lastName"
        placeholder="Last Name"
        class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"
      />

      <!-- Email -->
      <input
        type="email"
        name="email"
        placeholder="example123@pop.com"
        required
        class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"
      />

      <!-- Password -->
      <input
        type="password"
        name="password"
        placeholder="Password"
        required
        class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"
      />

      <!-- Confirm Password -->
      <input
        type="password"
        name="confirmPassword"
        placeholder="Confirm Password"
        required
        class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"
      />

      <!-- User Type -->
      <select
        name="userType"
        required
        class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"
      >
        <option value="" disabled selected>Select User Type</option>
        <option value="host">Host</option>
        <option value="guest">Guest</option>
      </select>

      <!-- Terms and Conditions -->
      <div class="flex items-center mb-4">
        <input
          type="checkbox"
          name="terms"
          required
          class="mr-2"
        />
        <label class="text-sm text-gray-700">
          I agree to the
          <a href="#" class="text-red-500 hover:underline">
            Terms & Conditions
          </a>
        </label>
      </div>

      <!-- Submit Button -->
      <input
        type="submit"
        value="Register"
        class="w-full bg-red-500 text-white py-2 rounded-md hover:bg-red-600 transition duration-300"
      />

      <h3 class="text-center p-3 mt-3">Already have an account?
        <a href="/login" class="text-red-500 font-bold">Login</a></h3>
    </form>
  </main>

</body>
</html>
