<%- include('../partials/head') %>
</head>
<body class="bg-gray-900 text-gray-100 min-h-screen">

<%- include('../partials/nav') %>

<main class="max-w-6xl mx-auto p-8 pt-28 min-h-screen">

  <!-- PROFILE CARD -->
  <div class="bg-gray-800 rounded-2xl shadow-2xl p-8 flex flex-col md:flex-row items-center gap-8 transform hover:scale-105 transition-transform duration-500">
    
    <!-- PROFILE IMAGE -->
    <div class="relative w-40 h-40 md:w-48 md:h-48">
      <img src="<%= user.photo || 'images/default-user.png' %>" 
           class="w-full h-full object-cover rounded-full border-4 border-red-500 shadow-lg hover:shadow-2xl transition-shadow duration-500">
      <span class="absolute bottom-0 right-0 w-6 h-6 bg-green-400 border-2 border-gray-900 rounded-full animate-pulse"></span>
    </div>

    <!-- USER INFO -->
    <div class="flex-1">
      <h2 class="text-3xl font-extrabold mb-2"><%= user.firstName %> <%= user.lastName %></h2>
      <p class="text-gray-400 mb-2"><%= user.email %></p>

      <span class="inline-block px-4 py-1 rounded-full text-white font-semibold
        <%= user.userType === 'host' ? 'bg-red-500' : 'bg-blue-500' %>">
        <%= user.userType.toUpperCase() %>
      </span>

      <!-- ADDITIONAL INFO -->
      <p class="mt-4 text-gray-400">Member since: <%= new Date(user._id.getTimestamp()).toLocaleDateString() %></p>
      <p class="mt-1 text-gray-400">Total Favourites: <%= user.favourites.length %></p>
    </div>
  </div>

  <!-- GUEST SECTION -->
  <% if (user.userType === 'guest') { %>
    <h3 class="text-2xl font-bold text-red-500 mt-10 mb-6">‚ù§Ô∏è Favourite Homes</h3>
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
      <% user.favourites.forEach(home => { %>
        <div class="bg-gray-800 rounded-xl overflow-hidden shadow-lg transform hover:scale-105 transition duration-500">
          <img src="/<%= home.photo %>" class="h-48 w-full object-cover">
          <div class="p-4">
            <h4 class="text-lg font-semibold mb-1 text-white"><%= home.houseName %></h4>
            <p class="text-gray-400"><i class="fas fa-map-marker-alt mr-1"></i> <%= home.location %></p>
            <p class="text-yellow-400 mt-1">‚≠ê <%= home.rating %> | Rs<%= home.price %>/night</p>
          </div>
        </div>
      <% }) %>
    </div>
  <% } %>

  <!-- HOST SECTION -->
  <% if (user.userType === 'host') { %>
    <h3 class="text-2xl font-bold text-red-500 mt-10 mb-6">üè† My Listed Homes</h3>
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
      <% hostHomes.forEach(home => { %>
        <div class="bg-gray-800 rounded-xl overflow-hidden shadow-lg transform hover:scale-105 transition duration-500">
          <img src="/<%= home.photo %>" class="h-48 w-full object-cover">
          <div class="p-4">
            <h4 class="text-lg font-semibold mb-1 text-white"><%= home.houseName %></h4>
            <p class="text-gray-400"><i class="fas fa-map-marker-alt mr-1"></i> <%= home.location %></p>
            <p class="text-yellow-400 mt-1">‚≠ê <%= home.rating %> | Rs<%= home.price %>/night</p>
            <a href="/host/edit-home/<%= home._id %>" class="inline-block mt-2 px-4 py-1 bg-red-500 text-white rounded hover:bg-red-600 transition">Edit</a>
          </div>
        </div>
      <% }) %>
    </div>
  <% } %>

</main>
</body>
</html>
