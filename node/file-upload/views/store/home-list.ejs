<%- include('../partials/head') %>
</head>
<body class="bg-gray-900 text-gray-100">

<%- include('../partials/nav') %>

<main class="max-w-7xl mx-auto p-6 mt-32">
  <!-- PAGE TITLE -->
  <h2 class="text-4xl font-extrabold text-center text-gradient bg-clip-text text-transparent 
             bg-gradient-to-r from-pink-500 via-red-500 to-yellow-400 mb-10">
    ðŸ”¥ Explore Our Registered Homes
  </h2>

  <!-- HOMES GRID -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
    <% registeredHomes.forEach(home => { %>
      <div class="bg-gray-800 rounded-2xl shadow-2xl hover:shadow-pink-500/50 transition duration-500 overflow-hidden transform hover:-translate-y-2 hover:scale-105">
        
        <!-- HOME IMAGE -->
        <img src="<%= home.photo.replace(/\\/g, '/') %>" alt="<%= home.houseName %>" 
             class="w-full h-56 object-cover rounded-t-2xl border-b-2 border-pink-500">

        <!-- HOME INFO -->
        <div class="p-5">
          <h3 class="text-2xl font-bold text-white mb-1 hover:text-pink-400 transition duration-300">
            <%= home.houseName %>
          </h3>
          <p class="text-gray-300 mb-3 flex items-center">
            <i class="fas fa-map-marker-alt mr-2 text-pink-400"></i>
            <%= home.location %>
          </p>

          <div class="flex justify-between items-center mb-4">
            <span class="text-lg font-semibold text-yellow-400">Rs <%= home.price %> / night</span>
            <div class="flex items-center">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" 
                   class="w-5 h-5 text-yellow-400 mr-1">
                <path fill-rule="evenodd" d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.007 5.404.433c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.433 2.082-5.006z" clip-rule="evenodd" />
              </svg>
              <span class="text-gray-300 font-semibold"><%= home.rating %></span>
            </div>
          </div>

          <!-- ACTION BUTTONS -->
          <div class="flex space-x-3">
            <a href="/homes/<%= home._id %>" 
               class="flex-1 text-center py-2 px-3 bg-gradient-to-r from-purple-500 via-pink-500 to-red-500 
                      text-white font-semibold rounded-lg shadow-lg hover:scale-105 transform transition duration-300">
              Details
            </a>

            <%- include('../partials/favourite', {home: home}) %>
          </div>

        </div>
      </div>
    <% }) %>
  </div>
</main>

</body>
</html>
