<%- include('../partials/head') %>
</head>
<body class="bg-gray-900 text-gray-100">

<%- include('../partials/nav') %>

<main class="max-w-7xl mx-auto p-6 mt-10">

  <h2 class="text-4xl md:text-5xl font-extrabold text-center text-red-500 mb-10 tracking-wider neon-text">
    Welcome to Airbnb
  </h2>

  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-8">
    <% registeredHomes.forEach(home => { %>
      <div class="bg-gray-800 rounded-xl shadow-lg overflow-hidden hover:shadow-red-500/50 transition duration-500 transform hover:-translate-y-1 hover:scale-105">
        
        <!-- Home Image -->
        <img src="/<%= home.photo.replace(/\\/g, '/') %>" 
             alt="<%= home.houseName %>" 
             class="w-full h-56 object-cover rounded-t-xl">

        <div class="p-4 space-y-2">
          <!-- Home Info -->
          <h3 class="text-xl font-bold text-white"><%= home.houseName %></h3>
          <p class="text-gray-300 flex items-center gap-1">
            <i class="fas fa-map-marker-alt text-red-500"></i> <%= home.location %>
          </p>

          <div class="flex justify-between items-center">
            <span class="text-lg font-semibold text-red-400">Rs<%= home.price %> / night</span>
            <div class="flex items-center gap-1">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5 text-yellow-400">
                <path fill-rule="evenodd" d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.007 5.404.433c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.433 2.082-5.006z" clip-rule="evenodd" />
              </svg>
              <span class="text-gray-300 font-medium"><%= home.rating %></span>
            </div>
          </div>

          <!-- Action Buttons -->
          <div class="flex justify-between gap-2 mt-4">
            <button class="flex-1 bg-green-500 hover:bg-green-600 text-gray-900 font-semibold py-2 rounded-lg transition duration-300 shadow-lg hover:shadow-green-400/50">
              Book Now
            </button>

            <% if (isLoggedIn && user.userType === 'guest') { %>
              <form action="/add-to-favourite" method="POST" class="flex-1">
                <input type="hidden" name="_id" value="<%= home._id %>">
                <button type="submit" class="w-full bg-pink-500 hover:bg-pink-600 text-white font-semibold py-2 rounded-lg transition duration-300 shadow-lg hover:shadow-pink-400/50">
                  ❤️ Favourite
                </button>
              </form>
            <% } %>
          </div>
        </div>

      </div>
    <% }) %>
  </div>

</main>

<!-- Neon Text Glow CSS -->
<style>
  .neon-text {
    text-shadow: 0 0 5px #f87171, 0 0 10px #f87171, 0 0 20px #f87171, 0 0 40px #f87171;
  }
</style>

</body>
</html>
