<%- include('../partials/head') %>
</head>
<body class="bg-gradient-to-r from-gray-950 via-gray-900 to-gray-950 mt-24 min-h-screen text-white font-sans">

  <%- include('../partials/nav') %>

  <main class="container mx-auto mt-12 px-4">

    <!-- Title -->
    <h2 class="text-5xl font-extrabold text-center mb-12 text-transparent bg-clip-text bg-gradient-to-r from-pink-500 via-purple-500 to-indigo-500 drop-shadow-lg animate-pulse">
      ✨ Hey Host! Your Homes ✨
    </h2>

    <!-- Homes Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-10">

      <% registeredHomes.forEach(home => { %>
      <div class="relative bg-gray-900/40 backdrop-blur-xl border border-gray-700 rounded-3xl shadow-2xl transform hover:scale-105 hover:shadow-pink-500/60 transition duration-500 cursor-pointer overflow-hidden">

        <!-- Image with neon border and hover zoom -->
        <div class="h-64 w-full overflow-hidden rounded-t-3xl border-b border-gray-700 relative group">
          <img src="<%= home.photo.replace(/\\/g, '/') %>" 
               alt="<%= home.houseName %>" 
               class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110">

          <!-- Floating neon overlay -->
          <div class="absolute inset-0 bg-gradient-to-t from-black/40 via-transparent to-black/50 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
        </div>

        <!-- Card Content -->
        <div class="p-6 space-y-4">

          <h3 class="text-2xl font-bold text-white drop-shadow-lg"><%= home.houseName %></h3>
          <p class="text-gray-300 flex items-center gap-2">
            <i class="fas fa-map-marker-alt text-pink-500 animate-pulse"></i>
            <%= home.location %>
          </p>

          <div class="flex justify-between items-center">
            <span class="text-lg font-bold text-green-400 drop-shadow-md">Rs <%= home.price %> / night</span>
            <div class="flex items-center gap-1">
              <!-- Neon Star -->
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5 text-yellow-400 animate-pulse">
                <path fill-rule="evenodd" d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.007 5.404.433c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.433 2.082-5.006z" clip-rule="evenodd"/>
              </svg>
              <span class="text-white font-semibold"><%= home.rating %></span>
            </div>
          </div>

          <!-- Action Buttons -->
          <div class="mt-4 space-y-3">

            <!-- Edit Button -->
            <a href="/host/edit-home/<%= home._id %>?editing=true"
               class="block w-full text-center py-2 rounded-2xl bg-gradient-to-r from-purple-500 via-pink-500 to-indigo-500 font-bold text-white hover:scale-105 hover:shadow-xl transition transform duration-300">
              Edit
            </a>

            <!-- Delete Button -->
            <form action="/host/delete-home/<%= home._id %>" method="POST">
              <button type="submit" 
                      class="w-full py-2 rounded-2xl bg-gradient-to-r from-red-500 via-pink-500 to-red-600 font-bold text-white hover:scale-105 hover:shadow-xl transition transform duration-300">
                Delete
              </button>
            </form>

          </div>

        </div>
      </div>
      <% }) %>

    </div>
  </main>

</body>
</html>
