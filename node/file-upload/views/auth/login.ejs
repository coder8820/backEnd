<%- include('../partials/head') %>
</head>

<body class="min-h-screen bg-gradient-to-br from-red-100 via-white to-red-200">
  <%- include('../partials/nav') %>

  <main class="flex items-center justify-center px-4 py-12">
    <div class="w-full max-w-md bg-white rounded-2xl shadow-xl p-8">

      <!-- Title -->
      <h1 class="text-3xl font-bold text-center text-gray-800 mb-2">
        Welcome Back ðŸ‘‹
      </h1>
      <p class="text-center text-gray-500 mb-6">
        Login to continue
      </p>

      <!-- Error Messages -->
      <%- include('../partials/error') %>

      <!-- Form -->
      <form action="/login" method="POST" class="space-y-5">

        <!-- Email -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">
            Email Address
          </label>
          <input
            type="email"
            name="email"
            placeholder="test@pop.com"
            value="<%= oldInput && oldInput.email ? oldInput.email : '' %>"
            required
            class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-red-400 focus:border-red-400 transition"
          />
        </div>

        <!-- Password -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">
            Password
          </label>
          <input
            type="password"
            name="password"
            placeholder="Enter strong password"
            value="<%= oldInput && oldInput.password ? oldInput.password : '' %>"
            required
            class="w-full mb-2 px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-red-400 focus:border-red-400 transition"
          />
        </div>

        <!-- Button -->
        <button
          type="submit"
        class="w-full bg-red-500 text-white py-2 mt-1 rounded-md hover:bg-red-600 transition duration-300">
          Sign In
        </button>

      </form>

      <!-- Footer -->
      <p class="text-center text-sm text-gray-500 mt-6">
        Donâ€™t have an account?
        <a href="/signup" class="text-red-500 font-medium hover:underline">
          Sign up
        </a>
      </p>

    </div>
  </main>
</body>
</html>
