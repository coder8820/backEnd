<%- include('../partials/head') %>
</head>
<body class="bg-gradient-to-r from-gray-400 via-gray-800 to-gray-400 w-full flex flex-col items-center justify-center">

  <%- include('../partials/nav') %>

  <main class="w-full max-w-md mt-8 p-8 bg-gray-900/70 backdrop-blur-xl rounded-3xl shadow-2xl border border-gray-700">

    <!-- Title -->
    <h1 class="text-4xl font-extrabold mb-8 text-center text-white drop-shadow-md tracking-wide">
      ✨ Create Your Account ✨
    </h1>

    <form action="/signup" method="POST" class="space-y-5">
      <%- include('../partials/error') %>

      <!-- Inputs -->
      <% const inputClass = "w-full px-4 py-3 rounded-2xl bg-gray-800/50 text-white placeholder-gray-400 border border-gray-600 focus:outline-none focus:ring-2 focus:ring-pink-500 focus:border-pink-500 transition"; %>

      <input type="text" name="firstName" placeholder="First Name" value="<%= oldInput?.firstName || '' %>" required class="<%= inputClass %>" />
      <input type="text" name="lastName" placeholder="Last Name" value="<%= oldInput?.lastName || '' %>" class="<%= inputClass %>" />
      <input type="email" name="email" placeholder="Email Address" value="<%= oldInput?.email || '' %>" required class="<%= inputClass %>" />
      <input type="password" name="password" placeholder="Password" required class="<%= inputClass %>" />
      <input type="password" name="confirmPassword" placeholder="Confirm Password" required class="<%= inputClass %>" />

      <!-- User Type -->
      <select name="userType" required class="<%= inputClass %>">
        <option value="" disabled selected>Select User Type</option>
        <option value="host" <%= oldInput?.userType === 'host' ? 'selected' : '' %>>Host</option>
        <option value="guest" <%= oldInput?.userType === 'guest' ? 'selected' : '' %>>Guest</option>
      </select>

      <!-- Terms -->
      <div class="flex items-center text-gray-300">
        <input type="checkbox" name="terms" required class="accent-pink-500 w-5 h-5 mr-3"/>
        <label class="text-sm">I agree to the 
          <a href="#" class="text-pink-500 hover:underline">Terms & Conditions</a>
        </label>
      </div>

      <!-- Submit -->
      <input type="submit" value="Register" 
        class="w-full py-3 rounded-2xl bg-gradient-to-r from-pink-500 via-purple-500 to-indigo-500 text-white font-bold text-lg hover:scale-105 hover:shadow-2xl transition transform duration-300 cursor-pointer"/>

      <!-- Login Link -->
      <p class="text-center text-gray-400 mt-4">
        Already have an account? 
        <a href="/login" class="text-pink-500 font-semibold hover:underline">Login</a>
      </p>
    </form>

  </main>

</body>
</html>
