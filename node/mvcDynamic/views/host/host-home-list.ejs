<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head', { title: 'host home Listings' }) %>

<body class="min-h-screen bg-gray-50 text-gray-900">

    <!-- Navbar -->
    <%- include('../partials/navbar') %>

    <!-- Main Content -->
    <main class="max-w-7xl mx-auto px-4 py-12">
        <!-- Header Section -->
        <div class="mb-8">
            <h1 class="text-4xl font-bold mb-2">Your Listings</h1>
            <p class="text-gray-600 text-lg">Manage and view all your properties</p>
        </div>

        <!-- Add New Home Button -->
        <div class="mb-8">
            <a href="/host/add-home" 
                class="inline-flex items-center px-6 py-3 bg-rose-500 hover:bg-rose-600 text-white font-semibold rounded-lg transition duration-200 shadow-md hover:shadow-lg">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                </svg>
                Add New Property
            </a>
        </div>

        <!-- Homes Grid -->
        <% if (registeredHomes && registeredHomes.length > 0) { %>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <% registeredHomes.forEach(function(home) { %>
                    <div class="bg-white rounded-2xl shadow-md hover:shadow-xl transition duration-300 overflow-hidden group">
                        
                        <!-- Image Container -->
                        <div class="relative h-48 overflow-hidden bg-gray-200">
                            <img src="<%= home.imageurl %>" alt="<%= home.housename %>" 
                                class="w-full h-full object-cover group-hover:scale-110 transition duration-300"
                                onerror="this.src='/images/home.jpg'">
                            
                            <!-- Badge -->
                            <div class="absolute top-4 right-4 bg-white px-3 py-1 rounded-full text-sm font-semibold text-rose-500 shadow-md">
                                â˜… <%= home.rating %>
                            </div>
                        </div>

                        <!-- Home Details -->
                        <div class="p-5">
                            <h3 class="text-xl font-bold text-gray-900 mb-2 truncate">
                                <%= home.housename %>
                            </h3>

                            <!-- Location -->
                            <div class="flex items-center text-gray-600 mb-3">
                                <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"></path>
                                </svg>
                                <span class="text-sm"><%= home.location %></span>
                            </div>

                            <!-- Description -->
                            <p class="text-gray-600 text-sm mb-4 line-clamp-2">
                                <%= home.description %>
                            </p>

                            <!-- Price -->
                            <div class="flex items-center justify-between mb-4">
                                <span class="text-2xl font-bold text-gray-900">
                                    $<%= home.price %>
                                </span>
                                <span class="text-sm text-gray-500">per night</span>
                            </div>

                            <!-- Action Buttons -->
                            <div class="flex gap-3">
                                <a href="/host/edit-home/<%= home.id %>?editing=true" 
                                    class="flex-1 px-4 py-2 bg-blue-500 hover:bg-blue-600 text-white font-semibold rounded-lg transition duration-200 text-center">
                                    Edit
                                </a>
                                <button onclick="deleteHome('<%= home.id %>')" 
                                    class="flex-1 px-4 py-2 bg-red-500 hover:bg-red-600 text-white font-semibold rounded-lg transition duration-200">
                                    Delete
                                </button>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } else { %>
            <!-- Empty State -->
            <div class="text-center py-16">
                <svg class="w-24 h-24 mx-auto text-gray-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 12a9 9 0 0118 0 9 9 0 01-18 0z"></path>
                </svg>
                <h3 class="text-2xl font-bold text-gray-700 mb-2">No Listings Yet</h3>
                <p class="text-gray-500 mb-6">Start earning by adding your first property</p>
                <a href="/host/add-home" 
                    class="inline-block px-8 py-3 bg-rose-500 hover:bg-rose-600 text-white font-semibold rounded-lg transition duration-200">
                    Add Your First Property
                </a>
            </div>
        <% } %>
    </main>

    <!-- Footer -->
    <%- include('../partials/footer') %>

