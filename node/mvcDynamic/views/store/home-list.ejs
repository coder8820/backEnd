<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head', { title: 'Home' }) %>

  <body class="bg-gray-100 text-gray-800 font-sans">
    <!-- Navbar Section -->
    <%- include('../partials/navbar') %>
    <!-- to inculde navigation bar from ejs-->
    <%- include('../partials/header') %>
    <!-- Main Content -->
    <main class="max-w-7xl mx-auto px-6 py-12">
      <div class="mb-12">
        <h2 class="text-5xl font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-slate-900 via-purple-900 to-slate-900 mb-3">
          Discover Your Perfect Stay
        </h2>
        <div class="h-1 w-24 bg-gradient-to-r from-purple-600 to-pink-600 rounded-full"></div>
        <p class="text-gray-600 mt-3 text-lg">Browse our collection of beautiful properties</p>
      </div>
      <!-- home-list -->
      <% if (registeredHomes && registeredHomes.length> 0) { %>

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        <% registeredHomes.forEach(function(home) { %>

        <div class="bg-white rounded-xl shadow hover:shadow-lg transition p-6">
          <h3 class="text-lg font-semibold mb-1"><%= home.housename %></h3>

          <p class="text-sm text-gray-500">üìç <%= home.location %></p>

          <p class="text-gray-600 text-sm mb-2"><%= home.description %></p>

          <img
            src="<%= home.imageurl ? home.imageurl : '/images/home.jpg' %>"
            alt="Home Image"
            class="w-full h-48 object-cover rounded-lg mt-4 mb-4"
            onerror="this.src='/images/home.jpg'"
          />

          <!-- Rating -->
          <div class="flex items-center justify-between mb-3">
            <div class="flex items-center">
              <span class="text-yellow-400 mr-2"
                >‚≠ê <%= home.rating || 'N/A' %></span
              >
              <span>Total(125)</span>
            </div>
          </div>

          <!-- pricing -->
          <p class="mt-3 font-bold text-rose-500">
            $ <%= home.price %> / night
          </p>

          <div>
            <a
              href="/booking/<%= home.id %>"
              class="mt-4 inline-block w-full text-center px-4 py-3 bg-rose-500 text-white font-medium rounded-lg hover:bg-rose-600 transition duration-200"
            >
              üè® Book Now
            </a>
          </div>
        </div>

        <% }); %>
      </div>

      <% } else { %>

      <p class="text-gray-500 text-center mt-10">No homes registered yet.</p>

      <% } %>
    </main>
    <!-- Footer Section -->
    <%- include('../partials/footer') %>
  </body>
</html>
