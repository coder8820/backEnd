<!DOCTYPE html>
<html lang="en">

<!-- Head -->
<%- include('partials/head', { title: 'Add Home' }) %>

    <body class="bg-gradient-to-br from-rose-50 via-white to-rose-100 min-h-screen">

        <!-- Navbar -->
        <%- include('partials/navbar') %>

            <!-- Page Header -->
            <header class="text-center py-12">
                <h1 class="text-3xl md:text-4xl font-bold text-gray-800">
                    Register Your Home üè°
                </h1>
                <p class="text-gray-500 mt-2">
                    Share your space with travelers around the world
                </p>
            </header>

            <!-- Main Content -->
            <main class="flex justify-center px-6 pb-16">

                <div class="bg-white w-full max-w-xl rounded-2xl shadow-xl p-8 relative overflow-hidden">

                    <!-- Decorative Background -->
                    <div class="absolute -top-20 -right-20 w-40 h-40 bg-rose-100 rounded-full blur-3xl opacity-70">
                    </div>

                    <form action="/host/add-home" method="POST" class="space-y-5 relative z-10">

                        <!-- Home Name -->
                        <div>
                            <label class="block text-sm font-medium mb-1">Home Name</label>
                            <input type="text" name="housename" placeholder="Cozy Mountain House" required
                                class="w-full px-4 py-3 border rounded-lg focus:ring-2 focus:ring-rose-400 focus:outline-none" />
                        </div>

                        <!-- Location -->
                        <div>
                            <label class="block text-sm font-medium mb-1">Location</label>
                            <input type="text" name="location" placeholder="Skardu, Pakistan" required
                                class="w-full px-4 py-3 border rounded-lg focus:ring-2 focus:ring-rose-400 focus:outline-none" />
                        </div>

                        <!-- Description -->
                        <div>
                            <label class="block text-sm font-medium mb-1">Description</label>
                            <textarea name="description" rows="3" placeholder="Describe your home..." required
                                class="w-full px-4 py-3 border rounded-lg focus:ring-2 focus:ring-rose-400 focus:outline-none"></textarea>
                        </div>

                        <!-- Image URL   -->
                        <div>
                            <label class="block text-sm font-medium mb-1">Image URL</label>
                            <input type="text" name="imageurl" placeholder="https://example.com/image.jpg" required
                                class="w-full px-4 py-3 border rounded-lg focus:ring-2 focus:ring-rose-400 focus:outline-none" />
                        </div>

                        <!-- Price -->
                        <div>
                            <label class="block text-sm font-medium mb-1">Price per Night</label>
                            <input type="number" name="price" placeholder="150" required
                                class="w-full px-4 py-3 border rounded-lg focus:ring-2 focus:ring-rose-400 focus:outline-none" />
                        </div>

                        <!-- Submit Button -->
                        <button type="submit"
                            class="w-full py-3 bg-rose-500 text-white font-semibold rounded-lg hover:bg-rose-600 transition">
                            üöÄ Publish Home
                        </button>
                    </form>
                </div>
            </main>

            <!-- Footer -->
            <%- include('partials/footer') %>
    </body>

</html>